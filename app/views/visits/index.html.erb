<div class="row">
  <div class="col-md-8">
    <div class="bg-light p-5 m-3">
      <h3>Statistics</h3>

      <p><strong>Original URL:</strong> <%= link_to @redirection.url_address, @redirection.url_address %></p>
      <p><strong>Short URL:</strong> <%= link_to redirect_url(@redirection.alias), redirect_url(@redirection.alias) %></p>

      <hr>

      <h4>Visit History</h4>

      <% if @visits.any? %>
        <table class="table">
          <thead>
            <tr>
              <th>IP Address</th>
              <th>Browser</th>
              <th>Operating System</th>
              <th>Visited At</th>
            </tr>
          </thead>
          <tbody>
            <% @visits.each do |visit| %>
              <tr>
                <td><%= visit.ip_address %></td>
                <td><%= visit.browser %></td>
                <td><%= visit.operating_system %></td>
                <td><%= visit.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>No visits yet.</p>
      <% end %>

      <%= link_to 'Back', redirection_info_path(alias: @redirection.alias), class: 'btn btn-primary' %>
    </div>
  </div>
</div>
