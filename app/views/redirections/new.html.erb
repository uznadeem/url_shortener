<div class="row">
  <div class="col-md-6">
    <div class="bg-light p-5 m-3">
      <h3>URL Shortner</h3>

      <div class="row">
        <% if @redirection.errors.any? %>
          <div id="error_explanation">
            <div class="alert alert-info">
              <h5><%= pluralize(@redirection.errors.count, "error") %> prohibited this redirection from being saved:</h5>
              <ul>
                <% @redirection.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>
      </div>

      <%= form_with(model: @redirection, local: true) do |form| %>
        <div class="form-group my-3">
          <%= form.label :url_address, "Shorten a long URL" %>
          <%= form.text_field :url_address, class: 'form-control' %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :alias, "Customize your link" %>
          <div class="input-group">
            <span class="input-group-text">
              <%= "#{root_url}" %>
            </span>
            <%= form.text_field :alias, class: 'form-control' %>
          </div>
        </div>

        <div class="actions">
          <%= form.submit "Shorten URL", class: 'btn btn-success mt-2' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
